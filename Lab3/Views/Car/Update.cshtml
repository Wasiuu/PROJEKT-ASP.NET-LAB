@{
}
<h1>Edytuj samochody</h1>
<br />  
<form asp-controller="Car" asp-action="Update" method="post">


    <div class="mb-3">
        <label asp-for="Model">Model samochodu</label>
        <input class="form-control" asp-for="Model" />
        <span class="text-danger" asp-validation-for="Model"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Manufacturer">Producent</label>
        <input class="form-control" asp-for="Manufacturer" />
        <span class="text-danger" asp-validation-for="Manufacturer"></span>

    </div>

    <div class="mb-3">
        <label asp-for="EngineCapacity">Pojemność silnika</label>
        <input class="form-control" asp-for="EngineCapacity" />
        <span class="text-danger" asp-validation-for="EngineCapacity"></span>

    </div>

    <div class="mb-3">
        <label asp-for="Power">Moc silnika</label>
        <input class="form-control" asp-for="Power" />
        <span class="text-danger" asp-validation-for="Power"></span>

    </div>

    <div class="mb-3">
        <label asp-for="EngineType">Rodzaj silnika</label>
        <input class="form-control" asp-for="EngineType" />
        <span class="text-danger" asp-validation-for="EngineType"></span>

    </div>

    <div class="mb-3">
        <label asp-for="RegistrationNumber">Numer rejestracyjny</label>
        <input class="form-control" asp-for="RegistrationNumber" />
        <span class="text-danger" asp-validation-for="RegistrationNumber"></span>

    </div>
    
    <div class="mb-3">
        <label asp-for="Owner">Właściciel</label>
        <input class="form-control" asp-for="Owner" />
        <span class="text-danger" asp-validation-for="Owner"></span>

    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Zapisz</button>

    </div>
</form>

