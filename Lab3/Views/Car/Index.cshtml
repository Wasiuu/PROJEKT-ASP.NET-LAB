@model List<Car>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista samochodów</h1>
<br />
<a class="btn btn-primary" asp-controller="Car" asp-action="Create">
    Dodaj samochód!
</a>

@if (Model.Count > 0)
{
    <table class="table">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(i => Model[0].Model)</th>
                <th>@Html.DisplayNameFor(i => Model[0].RegistrationNumber)</th>
                <th>@Html.DisplayNameFor(i => Model[0].PublicationDate)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {

                <tr>
                    <td>
                        @item.Model
                    </td>
                    <td>
                        @item.RegistrationNumber
                    </td>
                    <td>
                        @item.PublicationDate
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Car" asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-outline-info" asp-controller="Car" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-controller="Car" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
            }


        </tbody>

    </table>
        
    
}
